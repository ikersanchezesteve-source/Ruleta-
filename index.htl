<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <title>iFortune</title>
    <style>
        body { 
            margin: 0; padding: 0; height: 100vh; background: #000; 
            font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Helvetica, Arial, sans-serif; 
            overflow: hidden; display: flex; align-items: center; justify-content: center;
        }
        
        /* Fondo con degradado animado */
        .wallpaper { 
            position: absolute; top: 0; left: 0; width: 100%; height: 100%; 
            background: linear-gradient(135deg, #1e3a8a, #9333ea, #1e3a8a); 
            background-size: 400% 400%; animation: gradient 15s ease infinite;
            z-index: 1; 
        }
        @keyframes gradient { 0% {background-position: 0% 50%;} 50% {background-position: 100% 50%;} 100% {background-position: 0% 50%;} }

        /* Tarjeta tipo iOS flotante */
        .ios-card {
            position: relative; z-index: 10; 
            width: 90%; max-width: 350px;
            background: rgba(255, 255, 255, 0.9);
            backdrop-filter: blur(20px); -webkit-backdrop-filter: blur(20px);
            border-radius: 30px; padding: 25px; box-sizing: border-box;
            box-shadow: 0 20px 40px rgba(0,0,0,0.4);
            text-align: center; color: #000;
            animation: popIn 0.6s cubic-bezier(0.17, 0.89, 0.32, 1.28);
        }

        @keyframes popIn { from { transform: scale(0.8); opacity: 0; } to { transform: scale(1); opacity: 1; } }

        h1 { font-size: 20px; font-weight: 600; margin: 0 0 20px 0; letter-spacing: -0.5px; }

        .canvas-container { 
            position: relative; width: 100%; aspect-ratio: 1/1; 
            max-width: 260px; margin: 0 auto; 
        }
        #canvas { border-radius: 50%; width: 100%; height: 100%; }
        #pointer { 
            position: absolute; top: -5px; left: 50%; transform: translateX(-50%); 
            width: 0; height: 0; border-left: 10px solid transparent; 
            border-right: 10px solid transparent; border-top: 20px solid #007AFF; z-index: 15; 
        }

        button { 
            margin-top: 25px; width: 100%; padding: 14px; 
            font-size: 17px; font-weight: 600; border-radius: 12px; 
            border: none; background: #007AFF; color: white; cursor: pointer; 
            transition: transform 0.1s, background 0.2s;
        }
        button:active { background: #0056b3; transform: scale(0.96); }
    </style>
</head>
<body>

    <div class="wallpaper"></div>

    <div class="ios-card">
        <h1>üé° Ruleta del Destino</h1>
        
        <div class="canvas-container">
            <div id="pointer"></div>
            <canvas id="canvas" width="300" height="300"></canvas>
        </div>

        <button onclick="spin()">Girar ahora</button>
    </div>

    <script>
        const canvas = document.getElementById('canvas');
        const ctx = canvas.getContext('2d');
        const options = ["BESO", "INSTAGRAM", "ABRAZO", "CUBATA", "VOLTERETA", "RETO"];
        const colors = ["#FF3B30", "#AF52DE", "#5856D6", "#FF9500", "#34C759", "#FFCC00"];
        const arc = (2 * Math.PI) / options.length;

        function draw() {
            options.forEach((opt, i) => {
                const angle = i * arc;
                ctx.fillStyle = colors[i];
                ctx.beginPath();
                ctx.moveTo(150, 150);
                ctx.arc(150, 150, 150, angle, angle + arc);
                ctx.fill();
                ctx.save();
                ctx.fillStyle = "white";
                ctx.font = "bold 16px -apple-system";
                ctx.translate(150 + Math.cos(angle + arc/2) * 100, 150 + Math.sin(angle + arc/2) * 100);
                ctx.rotate(angle + arc/2 + Math.PI/2);
                ctx.fillText(opt, -ctx.measureText(opt).width/2, 0);
                ctx.restore();
            });
        }

        function spin() {
            // Animaci√≥n del bot√≥n
            const btn = document.querySelector('button');
            btn.disabled = true;
            btn.style.opacity = "0.6";

            // C√°lculo para que caiga siempre en BESO (rojo)
            // BESO es el √≠ndice 0. La flecha est√° arriba (270 grados).
            const vueltas = 8;
            const stopAngle = 270 - 30; // 30 es la mitad de 60 grados (360/6 opciones)
            const totalRotation = (360 * vueltas) + stopAngle;
            
            canvas.style.transition = "transform 4s cubic-bezier(0.15, 0, 0.15, 1)";
            canvas.style.transform = `rotate(${totalRotation}deg)`;
            
            setTimeout(() => {
                alert("üéÅ ¬°TE HA TOCADO: BESO! üòò");
                btn.disabled = false;
                btn.style.opacity = "1";
            }, 4500);
        }

        draw();
    </script>
</body>
</html>
